{
  "name": "narrate-wedding-desktop",
  "version": "1.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.narrate.wedding.desktop",
    "productName": "叙述婚礼接单执行系统",
    "files": [
      "main.js",
      "preload.js",
      "app.html",
      "assets/**"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}